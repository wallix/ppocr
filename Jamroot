include cxxflags.jam ;

project ppocr
    : requirements
    <include>src

    <cxxflags>-std=c++17
    <cxxflags>-fno-rtti
    <toolset>clang:<cxxflags>-Wno-disabled-macro-expansion
    <cxx-conversion-warnings>off
    <conditional>@flags
    <define>IMAGE_PATH='\"./tests/images/\"'

    : default-build release
;


## Lib {

#lib libboost_unit_test : : <name>boost_unit_test_framework-mt <link>shared ;
